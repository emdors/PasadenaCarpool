      br
      .container.theme-showcase(role='main')
  
        div(class="userStats")
          table#userstats
            thead
              tr.head
                th User
                th Days In Carpool
                th Days as Driver
                th Percentage Driver Overall
            tbody
              each user in users
                tr
                  td #{user.username}
                  td #{user.total_driver + user.total_rider}
                  td #{user.total_driver}
                  td #{user.total_driver/poolDays}



        div(class="weekbyweekstats")
          table#weekbyweekstats
            - weekList = []
            thead
              th User
              each week in weeks
                th #{week}
                - weekList.push(week)
            tbody
              each user in users
                tr
                td user.username
                each week in weekList
                  if week in user
                    td(bgcolor=(user[week].driver_count/(user[week].driver_count+user[week].rider_count) >=.3) ? 'green':'red') #{(week in user)}


                

          